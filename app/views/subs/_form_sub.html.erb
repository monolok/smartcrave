 <div class="container-fluid">
 <%= form_for @sub, html: {mutlipart: true} do |f| %>
  <% if @sub.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sub.errors.count, "error") %> prohibited this sub from being saved:</h2>
      <ul>
      <% @sub.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
  <div class="row">
      <div class="col-xs-offset-4">
         <%= f.fields_for :image do |img|%>
            <%= img.label :image %><br>
            <%= img.text_field :name%>
            <%# img.file_field :image %>
          <%end%>
      </div>    
  </div>
  <div class="row">
      <div class="col-xs-offset-4">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>    
  </div>
  <div class="row">
      <div class="col-xs-offset-4">
        <%= f.label :description %>
        <%= f.text_area :description %> 
      </div>   
  </div>
  <div class="row">
      <div class="col-xs-offset-4">
      <%= f.submit %>  
      </div>  
  </div>
<% end %>  
</div>


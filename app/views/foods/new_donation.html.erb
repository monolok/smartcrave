<div class="container-fluid brand donate-design">
  <%= form_tag new_donation_path do %>
    <div class="row center">
       <h3>Donate <%= @amount.to_i/100%> $</h3>
    </div>
    <div class="row center">

      <script 
        src="https://checkout.stripe.com/checkout.js" 
        class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="Donation"
        data-amount= "<%= @amount%>"

        ></script>
    </div>
  <% end %>   
  <div class="row center pad-bot2">
    <%= link_to root_path do%>
      <i class="fa fa-arrow-left fa-2x"></i>
    <%end%>
  </div>     
</div>